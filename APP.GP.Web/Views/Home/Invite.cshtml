@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invitación: Toma de Protesta del Gobernador Electo Alejandro Armenta</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- AOS CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <!-- Font Awesome (Optional, for icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-image: url('/img/fondoInvite.webp');
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.8); /* Fondo semitransparente para las tarjetas */
        }

        .map-button {
            display: inline-block;
        }

            .map-button svg {
                margin-right: 15px;
            }
    </style>
    <script src="~/js/app/qrcode.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/kendo/js/kendo.all.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/kendo/styles/material-lime.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="text-center text-black" data-aos="fade-up" style="margin-top:100px;">
            <h1 class="display-4"><b>Alejandro Armenta</b></h1>
            <h2 class="display-4">Toma de protesta</h2>
            <p class="lead">Acompáñanos en los eventos del Gobernador Electo <b>Alejandro Armenta</b></p>
        </div>

        <div class="row mt-5">
            <!-- Toma de Protesta -->
            <div class="col-md-4 mb-4" data-aos="fade-right">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Toma de Protesta</h5>
                        <p class="card-text"><i class="fa fa-calendar"></i> Fecha y Hora: 14 de diciembre 2024 a las 10:00 am</p>
                        <p class="card-text"><i class="fa fa-map-marker-alt"></i> Lugar: Palacio Legislativo Puebla</p>
                        <button id="confirmProtesta" class="btn btn-primary"><i class="fa fa-check"></i> Confirmar Asistencia</button>&nbsp;&nbsp;&nbsp;
                        <a class="map-button btn btn-secondary" href="https://www.google.com/maps?q=Palacio+Legislativo+Puebla" target="_blank" rel="noopener noreferrer">
                            <svg xmlns="https://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="16"><path d="M285.6 444.1C279.8 458.3 264.8 466.3 249.8 463.4C234.8 460.4 223.1 447.3 223.1 432V256H47.1C32.71 256 19.55 245.2 16.6 230.2C13.65 215.2 21.73 200.2 35.88 194.4L387.9 50.38C399.8 45.5 413.5 48.26 422.6 57.37C431.7 66.49 434.5 80.19 429.6 92.12L285.6 444.1z"></path></svg>
                            Ver Mapa
                        </a>
                    </div>
                </div>
            </div>

            <!-- Meeting con Colaboradores -->
            <div class="col-md-4 mb-4" data-aos="fade-up">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Meeting con Colaboradores</h5>
                        <p class="card-text"><i class="fa fa-calendar"></i> Fecha y Hora: 14 de diciembre 2024 a las 12:00 pm</p>
                        <p class="card-text"><i class="fa fa-map-marker-alt"></i> Lugar: Centro de Convenciones Puebla</p>
                        <button id="confirmMeeting" class="btn btn-primary"><i class="fa fa-check"></i> Confirmar Asistencia</button>&nbsp;&nbsp;&nbsp;
                        <a class="map-button btn btn-secondary" href="https://www.google.com/maps?q=Centro+de+Convenciones+Puebla" target="_blank" rel="noopener noreferrer">
                            <svg xmlns="https://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="16"><path d="M285.6 444.1C279.8 458.3 264.8 466.3 249.8 463.4C234.8 460.4 223.1 447.3 223.1 432V256H47.1C32.71 256 19.55 245.2 16.6 230.2C13.65 215.2 21.73 200.2 35.88 194.4L387.9 50.38C399.8 45.5 413.5 48.26 422.6 57.37C431.7 66.49 434.5 80.19 429.6 92.12L285.6 444.1z"></path></svg>
                            Ver Mapa
                        </a>
                    </div>
                </div>
            </div>

            <!-- Comida -->
            <div class="col-md-4 mb-4" data-aos="fade-left">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Comida</h5>
                        <p class="card-text"><i class="fa fa-calendar"></i> Fecha y Hora: 14 de diciembre 2024 a las 2:00 pm</p>
                        <p class="card-text"><i class="fa fa-map-marker-alt"></i> Lugar: Centro de Convenciones Puebla</p>
                        <button id="confirmComida" class="btn btn-primary"><i class="fa fa-check"></i> Confirmar Asistencia</button>&nbsp;&nbsp;&nbsp;
                        <a class="map-button btn btn-secondary" href="https://www.google.com/maps?q=Centro+de+Convenciones+Puebla" target="_blank" rel="noopener noreferrer">
                            <svg xmlns="https://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="16"><path d="M285.6 444.1C279.8 458.3 264.8 466.3 249.8 463.4C234.8 460.4 223.1 447.3 223.1 432V256H47.1C32.71 256 19.55 245.2 16.6 230.2C13.65 215.2 21.73 200.2 35.88 194.4L387.9 50.38C399.8 45.5 413.5 48.26 422.6 57.37C431.7 66.49 434.5 80.19 429.6 92.12L285.6 444.1z"></path></svg>
                            Ver Mapa
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5" data-aos="fade-up">
            <div style="background-color: rgba(0, 0, 0, 0.6); padding: 20px; border-radius: 10px;">
                <h5 class="card-title text-white">Pase para Eventos</h5>
                <p class="card-text text-white">Escanea el siguiente código QR para acceder a los eventos:</p>
                <div id="qrCode" class="d-flex justify-content-center">
                    <img src="URL_DEL_QR_CODE" alt="Código QR para Pase" />
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AOS JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Initialize AOS
        AOS.init();

        // SweetAlert2 for RSVP buttons
        document.getElementById('confirmProtesta').addEventListener('click', function () {
            Swal.fire({
                title: '¡Gracias!',
                text: 'Has confirmado tu asistencia a la Toma de Protesta.',
                icon: 'success',
                confirmButtonText: 'Cerrar'
            });
        });

        document.getElementById('confirmMeeting').addEventListener('click', function () {
            Swal.fire({
                title: '¡Gracias!',
                text: 'Has confirmado tu asistencia al Meeting con Colaboradores.',
                icon: 'success',
                confirmButtonText: 'Cerrar'
            });
        });

        document.getElementById('confirmComida').addEventListener('click', function () {
            Swal.fire({
                title: '¡Gracias!',
                text: 'Has confirmado tu asistencia a la Comida.',
                icon: 'success',
                confirmButtonText: 'Cerrar'
            });
        });
        $(document).ready(function () {
            var qrCodeData = "Evento: Toma de protesta\nInvitado: " + "Jose Roberto Juarez Diaz" + "\nFecha: 14/12/2024" + "\nHora: 13:00 horas" + "\nAsiento: 14" + "\nFila: 12";
            $("#qrCode").empty();
            new QRCode(document.getElementById("qrCode"), {
                text: qrCodeData,
                width: 200,
                height: 200
            });
        });
    </script>
</body>
</html>
