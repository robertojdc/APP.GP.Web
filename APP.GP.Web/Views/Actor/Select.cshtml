<div class="container-fluid py-4">
    <!-- Búsqueda de Actores Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header text-white text-center">
            <h3 class="mb-0">BÚSQUEDA DE ACTORES</h3>
        </div>
        <div class="card-body bg-light">
            <form id="consultaForm" class="row g-3">
                <div class="col-md-6 col-lg-4">
                    <label for="nombre" class="form-label">NOMBRE(S)</label>
                    <input id="nombre" name="nombre" type="text" class="form-control" placeholder="Nombre(s)">
                </div>
                <div class="col-md-6 col-lg-4">
                    <label for="apellidoPaterno" class="form-label">APELLIDO PATERNO</label>
                    <input id="apellidoPaterno" name="apellidoPaterno" type="text" class="form-control" placeholder="Apellido paterno">
                </div>
                <div class="col-md-6 col-lg-4">
                    <label for="apellidoMaterno" class="form-label">APELLIDO MATERNO</label>
                    <input id="apellidoMaterno" name="apellidoMaterno" type="text" class="form-control" placeholder="Apellido materno">
                </div>
                <div class="col-md-6 col-lg-4">
                    <label for="grupo" class="form-label">GRUPO</label>
                    <input id="grupo" name="grupo" class="form-control" placeholder="Seleccione un grupo">
                    <input type="hidden" id="grupoId" name="grupoId">
                </div>
                <div class="col-md-6 col-lg-4">
                    <label for="subgrupo" class="form-label">SUBGRUPO</label>
                    <input id="subgrupo" name="subgrupo" class="form-control" placeholder="Seleccione un subgrupo">
                    <input type="hidden" id="subgrupoId" name="subgrupoId">
                </div>
                <div class="col-md-6 col-lg-4">
                    <label for="clasificacion" class="form-label">CLASIFICACIÓN</label>
                    <input id="clasificacion" name="clasificacion" class="form-control" placeholder="Seleccione una clasificación">
                    <input type="hidden" id="clasificacionId" name="clasificacionId">
                </div>
                <div class="col-12 text-center mt-4">
                    <button type="button" class="btn btn-danger me-2" id="buscarActor">Buscar</button>
                    <button type="button" class="btn btn-outline-secondary" id="crearActor">Crear</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Resultados Grid -->
    <div class="table-responsive mb-4">
        <div id="gridResultados"></div>
    </div>
</div>

<div id="loadingModal" style="display:none;">
    <div style="text-align: center; padding: 20px;">
        <span class="k-icon k-i-loading"></span>&nbsp;&nbsp;Cargando...
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#buscarActor').on('click', function (e) {
            e.preventDefault();
            buscarActor();
        });

        obtenerGrupos();

        $("#crearActor").on('click', function (e) {
            e.preventDefault();
            window.location.href = '/Actor/Index';
        });
    });

    function buscarActor() {
        var nombre = $('#nombre').val();
        var apellidoPaterno = $('#apellidoPaterno').val();
        var apellidoMaterno = $('#apellidoMaterno').val();

        // Inicializar el modal de loading
        var loadingModal = $("#loadingModal").kendoWindow({
            modal: true,
            visible: false,
            width: "300px",
            height: "150px",
            actions: []
        }).data("kendoWindow");

        // Mostrar el modal de loading
        loadingModal.center().open();

        $("#gridResultados").empty();
        $.ajax({
            url: '/Actor/Consultar',
            type: 'GET',
            data: {
                nombre: nombre,
                apellidoPaterno: apellidoPaterno,
                apellidoMaterno: apellidoMaterno,
                idGrupo: $("#grupo").data('kendoDropDownList') ? $("#grupo").data('kendoDropDownList').value() : 0,
                idSubGrupo: $("#subgrupo").data('kendoDropDownList') ? $("#subgrupo").data('kendoDropDownList').value() : 0,
                idCategoria: $("#clasificacion").data('kendoDropDownList') ? $("#clasificacion").data('kendoDropDownList').value() : 0
            },
            success: function (response) {
                loadingModal.close();
                $("#gridResultados").kendoGrid({
                    dataSource: {
                        data: response,
                        pageSize: 10
                    },
                    height: 400,
                    pageable: true,
                    columns: [
                        {
                            field: "nombreCompleto",
                            title: "Información del Contacto",
                            width: "20%",
                            template: function (dataItem) {
                                var imgSrc = dataItem.fotoBase64
                                    ? `data:image/jpeg;base64,${dataItem.fotoBase64}`
                                    : "/path/to/default-image.jpg";
                                return `
                                        <div style="display: flex; align-items: center;">
                                            <div class="customer-photo" style="background-image: url('${imgSrc}'); width: 50px; height: 50px; border-radius: 50%; background-size: cover; background-position: center; margin-right: 10px;"></div>
                                            <div>
                                                <div class="customer-name" style="font-weight: bold;">
                                                    ${dataItem.nombre} ${dataItem.apellidoPaterno} ${dataItem.apellidoMaterno}
                                                </div>
                                            </div>
                                        </div>
                                    `;
                            }
                        },
                        { field: "cargoActual", width: "15%", title: "Cargo Actual" },
                        { field: "telefonoPersonal", width: "10%", title: "Teléfono" },
                        {
                            field: "informacionCombinada",
                            title: "Grupos",
                            width: "35%",
                            template: function (dataItem) {
                                return dataItem.grupos ? dataItem.grupos.replace(/;/g, '<br>') : 'N/A';
                            }
                        },
                        {
                            title: "Acciones",
                            width: "12%",
                            template: `
                                     <button class="k-button btn-editar" title="Editar">
                                        <span class="k-icon k-font-icon k-i-edit k-icon-32"></span>
                                    </button>
                                    <button class="k-button btn-eliminar" title="Eliminar">
                                        <span class="k-icon k-font-icon k-i-trash k-icon-32 colored-icon"></span>
                                    </button>
                            `
                        }
                    ],
                    dataBound: function (e) {
                        e.sender.tbody.find(".btn-ver-detalle").on("click", function (ev) {
                            ev.preventDefault();
                            var dataItem = e.sender.dataItem($(this).closest("tr"));
                            window.location.href = `/Actor/Details?idActor=${dataItem.idActor}`;
                        });
                        e.sender.tbody.find(".btn-editar").on("click", function (ev) {
                            ev.preventDefault();
                            var dataItem = e.sender.dataItem($(this).closest("tr"));
                            window.location.href = `/Actor/Edit?idActor=${dataItem.idActor}`;
                        });
                        e.sender.tbody.find(".btn-eliminar").on("click", function (ev) {
                            ev.preventDefault();
                            var dataItem = e.sender.dataItem($(this).closest("tr"));
                            MensajeConfirmacion('¿Eliminar registro?', 'Esta acción no se puede deshacer.', function () {
                                $.ajax({
                                    url: '/Actor/Delete?idActor=' + dataItem.idActor,
                                    type: 'GET',
                                    success: function (response) {
                                        MensajeExito('Éxito', 'El actor ha sido eliminado correctamente.');
                                        buscarActor();
                                    },
                                    error: function (xhr, status, error) {
                                        console.log('Ocurrió un error: ' + error);
                                    }
                                });
                            });
                        });
                    },
                    resizable: true,
                    scrollable: false
                });
            },
            error: function (xhr, status, error) {
                loadingModal.close();
                MensajeError('Error', 'Ocurrió un error al consultar los actores.');
            }
        });
    }

    function obtenerGrupos() {
        $.ajax({
            url: '/Actor/ObtenerGrupos',
            type: 'GET',
            success: function (response) {
                $("#grupo").kendoDropDownList({
                    dataTextField: "nombre",
                    dataValueField: "id",
                    dataSource: response,
                    optionLabel: "Seleccione un grupo",
                    change: function (e) {
                        var idGrupo = this.value();
                        if (idGrupo) {
                            obtenerSubGrupos(idGrupo);
                        }
                    }
                });
            },
            error: function (xhr, status, error) {
                console.log('Ocurrió un error: ' + error);
            }
        });
    }

    function obtenerSubGrupos(idGrupo) {
        $.ajax({
            url: '/Actor/ObtenerSubGrupos',
            type: 'POST',
            data: { idGrupo: idGrupo },
            success: function (response) {
                $("#subgrupo").kendoDropDownList({
                    dataTextField: "nombre",
                    dataValueField: "id",
                    dataSource: response,
                    optionLabel: "Seleccione un subgrupo",
                    change: function (e) {
                        var idSubGrupo = this.value();
                        if (idSubGrupo) {
                            obtenerCategoria(idSubGrupo);
                        }
                    }
                });
            },
            error: function (xhr, status, error) {
                console.log('Ocurrió un error: ' + error);
            }
        });
    }

    function obtenerCategoria(idSubGrupo) {
        $.ajax({
            url: '/Actor/ObtenerCategorias',
            type: 'POST',
            data: { idSubGrupo: idSubGrupo },
            success: function (response) {
                $("#clasificacion").kendoDropDownList({
                    dataTextField: "descripcion",
                    dataValueField: "idCategoria",
                    dataSource: response,
                    optionLabel: "Seleccione una clasificación",
                    change: function (e) {
                        var idSubCategoria = this.value();
                        if (idSubCategoria) {
                            obtenerSubCategoria(idSubCategoria);
                        }
                    }
                });
            },
            error: function (xhr, status, error) {
                console.log('Ocurrió un error: ' + error);
            }
        });
    }

    function obtenerSubCategoria(idSubCategoria) {
        $.ajax({
            url: '/Actor/ObtenerSubCategorias',
            type: 'POST',
            data: { idCategoria: idSubCategoria },
            success: function (response) {
                if (response && response.length > 0) {
                    var subCategoriaContainer = $('<div class="form-group row subcategoria-container">')
                        .append('<label class="col-3 col-form-label">SUBCATEGORÍA</label>')
                        .append('<div class="col-9"><input id="subcategoria' + idSubCategoria + '" name="subcategoria" class="form-control"></div>');

                    $('#clasificacionForm').append(subCategoriaContainer);

                    $("#subcategoria" + idSubCategoria).kendoDropDownList({
                        dataTextField: "descripcion",
                        dataValueField: "idCategoria",
                        dataSource: response,
                        optionLabel: "Seleccione una subcategoría",
                        change: function (e) {
                            var idSubCategoria = this.value();
                            if (idSubCategoria) {
                                obtenerSubCategoria(idSubCategoria);
                            }
                        }
                    });
                } else {
                    alert('No hay subcategorías disponibles para esta categoría.');
                }
            },
            error: function (xhr, status, error) {
                console.log('Ocurrió un error: ' + error);
            }
        });
    }
</script>
<style>
    .k-icon-32 {
        font-size: 14pt;
    }
</style>
